    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/campus_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/telkom_3" />


        </FrameLayout>

        <TextView
            android:id="@+id/campus_name"
            style="@style/TextContent.HeadlineMedium.Bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/campus_name" />

        <TextView
            android:id="@+id/campus_location"
            android:textStyle="bold"
            style="@style/TextContent.BodyMedium.Gray"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:text="Location"
            android:textSize="16sp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    style="@style/TextContent.BodyMedium.Bold"
                    android:text="Berdiri"/>
                <TextView
                    style="@style/TextContent.BodyMedium.Gray"
                    android:layout_weight="1"
                    android:id="@+id/campus_founded"
                    android:text="20219"/>
            </TableRow>
            <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
                <TextView
                    android:paddingEnd="20dp"
                    style="@style/TextContent.BodyMedium.Bold"
                    android:text="Akreditasi "/>
                <TextView
                    style="@style/TextContent.BodyMedium.Gray"
                    android:layout_weight="1"
                    android:id="@+id/campus_akreditation"
                    android:text="Berdiri "/>
            </TableRow>
            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    style="@style/TextContent.BodyMedium.Bold"
                    android:text="Rektor "/>
                <TextView
                    style="@style/TextContent.BodyMedium.Gray"
                    android:layout_weight="1"
                    android:id="@+id/campus_rector"
                    android:text="Berdiri "/>
            </TableRow>
        </TableLayout>


        <TextView
            style="@style/TextContent.TitleMedium.Bold.MarginLeftRight"
            android:layout_marginBottom="8dp"
            android:text="Detail Information" />
        <TextView
            android:id="@+id/campus_desc"
            style="@style/TextContent.BodyMedium.Gray"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="25dp"
            android:text="@string/description" />

        <TextView
            style="@style/TextContent.TitleMedium.Bold.MarginLeftRight"
            android:layout_marginBottom="8dp"
            android:text="About Informatics Study" />
        <TextView
            android:id="@+id/campus_profile"
            style="@style/TextContent.BodyMedium.Gray"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/description" />

        <Button
            android:id="@+id/action_share"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Share Information"
            android:background="@color/black_app"
            android:textColor="@color/white"
            android:padding="10dp"
            android:elevation="4dp"/>

    </LinearLayout>

</ScrollView>